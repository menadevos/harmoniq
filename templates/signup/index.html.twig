{# templates/signup/index.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'silk': {
                            50: '#F7F3F5',
                            100: '#EDE0E8',
                            200: '#DBC4D4',
                            300: '#C9A4B9',
                            400: '#B7849E',
                            500: '#A56684',
                            600: '#8C4F6B',
                            700: '#733A52',
                            800: '#5A2639',
                            900: '#411320'
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .elegant-gradient {
            background: linear-gradient(45deg, #A56684, #8C4F6B, #733A52);
            background-size: 200% 200%;
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            animation: gradient-flow 15s ease infinite;
        }

        @keyframes gradient-flow {
            0% { background-position: 200% 0%; }
            50% { background-position: 0% 100%; }
            100% { background-position: 200% 0%; }
        }

        .shadow-glow {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1), 0 0 25px rgba(0, 0, 0, 0.2);
            transition: box-shadow 0.3s ease-in-out;
        }

        .shadow-glow:hover {
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2), 0 0 50px rgba(0, 0, 0, 0.3);
        }

        .hover-transform:hover {
            transform: translateY(-5px) scale(1.05);
        }

        .input-focus:focus {
            border-color: #A56684;
            box-shadow: 0 0 10px rgba(165, 102, 132, 0.5);
        }

        .pulse-animation {
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        .container {
            max-width: 320px; /* Reduced width */
            padding: 1rem;
        }

        .form-group {
            margin-bottom: 0.75rem; /* Reduced margin */
        }

        .form-control {
            width: 100%;
            padding: 0.5rem;
            font-size: 0.9rem; /* Smaller font size */
            border-radius: 0.5rem;
            border: 1px solid #e0d1e3;
        }

        .form-group input,
        .form-group select {
            height: 2.25rem;
            padding: 0.5rem;
        }

        .form-control:focus {
            border-color: #A56684;
            box-shadow: 0 0 10px rgba(165, 102, 132, 0.5);
        }

        .submit-btn {
            background-color: #A56684;
            color: white;
            font-weight: bold;
            padding: 0.75rem;
            border-radius: 1.25rem;
            width: 100%;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #8C4F6B;
            transform: scale(1.05);
        }

        .login-link {
            font-size: 0.85rem;
            color: #8C4F6B;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-silk-50">
        <div class="flex max-w-4xl w-full rounded-3xl shadow-2xl">
            <!-- Left side with the signup form -->
            <div class="relative z-10 w-full lg:w-1/2 bg-white/90 backdrop-blur-lg rounded-l-3xl py-6 px-8
                    transform transition-all duration-700 hover:scale-[1.02] shadow-2xl text-center">
                <h1 class="text-3xl font-bold mb-2 elegant-gradient tracking-wider">
                    HARMONIQ âœ¨
                </h1>
                <p class="text-lg text-silk-600 mb-4 font-light italic tracking-wide pulse-animation">
                    Join us and become part of something amazing! ðŸ˜Š
                </p>

                {% for message in app.flashes('success') %}
                    <div class="bg-green-100 text-green-600 p-3 rounded-lg mb-4">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'signup-form space-y-4'}}) }}

                    <div class="form-group">
                        {{ form_label(form.fullname, 'Full Name', {'label_attr': {'class': 'text-silk-600 font-semibold'}}) }}
                        {{ form_widget(form.fullname, {'attr': {'class': 'form-control input-focus'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'text-silk-600 font-semibold'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control input-focus'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.phoneNumber, 'Phone Number', {'label_attr': {'class': 'text-silk-600 font-semibold'}}) }}
                        {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control input-focus'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.password, 'Password', {'label_attr': {'class': 'text-silk-600 font-semibold'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control input-focus'}}) }}
                    </div>

                    {{ form_widget(form.submit, {'attr': {'class': 'submit-btn'}}) }}

                {{ form_end(form) }}

                <div class="mt-4">
                    <p class="text-silk-600">Already a member? ðŸŒŸ</p>
                    <a href="{{ path('app_login') }}" class="text-silk-500 font-bold hover:underline login-link">
                        Login Here
                    </a>
                </div>
            </div>

            <!-- Right side with the image -->
            <div class="hidden lg:block w-1/2 bg-silk-100 rounded-r-3xl">
                <img src="{{ asset('images/signup.jpeg') }}" alt="Event Image" class="w-full h-full object-cover rounded-r-3xl" />
            </div>
        </div>
    </div>
{% endblock %}


