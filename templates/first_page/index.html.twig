    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'silk': {
                            50: '#F7F3F5',
                            100: '#EDE0E8',
                            200: '#DBC4D4',
                            300: '#C9A4B9',
                            400: '#B7849E',
