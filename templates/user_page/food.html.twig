<!-- templates/user_page/food.html.twig -->

<h3>Choose your food for the event:</h3>

<form method="post" action="{{ path('user_confirm_food') }}">
    <select name="foodType">
        {% for food in foodOptions %}
            <option value="{{ food }}">{{ food }}</option>
        {% endfor %}
    </select>

    <button type="submit">Confirm Food</button>
</form>
